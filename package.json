{
    "name": "gcal-cleaner",
    "description": "Google Calendar cleaner app",
    "version": "0.0.1",
    "author": "pozil",
    "bugs": "https://github.com/pozil/gcal-cleaner/issues",
    "dependencies": {
        "compression": "^1.7.4",
        "express": "^4.17.1",
        "express-session": "^1.17.1",
        "helmet": "^3.23.3",
        "dotenv": "^8.2.0",
        "googleapis": "^55.0.0"
    },
    "devDependencies": {
        "eslint": "^7.5.0",
        "husky": "^4.2.5",
        "lint-staged": "^10.2.11",
        "lwc-services": "^2.1.4",
        "npm-run-all": "^4.1.5",
        "prettier": "^2.0.5"
    },
    "engines": {
        "node": ">=10.13.0",
        "npm": ">=6.4.1",
        "yarn": ">=1.9.4"
    },
    "homepage": "https://github.com/pozil/gcal-cleaner",
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "keywords": [
        "lwc"
    ],
    "license": "CC0-1.0",
    "lint-staged": {
        "**/*.{css,html,js,json,md,ts,yaml,yml}": [
            "prettier --write"
        ],
        "./src/**/*.js": [
            "eslint"
        ]
    },
    "nodemonConfig": {
        "watch": [
            "src/server/**/*.js"
        ],
        "ext": "js",
        "ignore": [
            "src/**/*.spec.js",
            "src/**/*.test.js"
        ],
        "exec": "node ./src/server/server.js"
    },
    "repository": "pozil/gcal-cleaner2",
    "scripts": {
        "start": "npm run build && node src/server/server.js",
        "build": "lwc-services build -m production",
        "build:development": "lwc-services build",
        "lint": "eslint ./src/**/*.js",
        "prettier": "prettier --write \"**/*.{css,html,js,json,md,ts,yaml,yml}\"",
        "prettier:verify": "prettier --list-different \"**/*.{css,html,js,json,md,ts,yaml,yml}\"",
        "serve": "run-p serve:client serve:api",
        "serve:api": "node src/server/api.js",
        "serve:client": "node scripts/server.js",
        "test:unit": "lwc-services test:unit",
        "test:unit:coverage": "lwc-services test:unit --coverage",
        "test:unit:debug": "lwc-services test:unit --debug",
        "test:unit:watch": "lwc-services test:unit --watch",
        "watch": "run-p watch:client watch:server",
        "watch:client": "lwc-services watch",
        "watch:server": "nodemon"
    }
}
